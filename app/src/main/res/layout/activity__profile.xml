<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Profile"
    android:orientation="vertical">

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:cardCornerRadius="9dp"
            app:cardBackgroundColor="#4CB7A5"
            android:elevation="6dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_color="#000000"
            app:civ_border_width="1dp"
            android:id="@+id/profile_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/bungee"
            android:layout_toRightOf="@id/profile_img"
            android:layout_marginTop="57dp"
            android:layout_marginLeft="15dp"
            android:includeFontPadding="false"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_toRightOf="@id/profile_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/full_name"
            android:includeFontPadding="false"
            android:textColor="#000000"
            />

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/prof_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:layout_marginBottom="10dp"
            android:paddingRight="10dp"
            android:layout_margin="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="50dp"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/newu"
                android:drawablePadding="10dp" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/prof_usrname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Name"
            android:layout_marginBottom="10dp"
            android:paddingRight="10dp"
            android:layout_margin="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="20dp"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/username"
                android:drawablePadding="10dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/prof_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:layout_marginBottom="10dp"
            android:layout_margin="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="20dp"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/telephone"
                android:drawablePadding="10dp"
                android:backgroundTint="@color/white"/>

        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:id="@+id/btn_update_prof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UPDATE"
            android:backgroundTint="#4CB7A5"
            android:layout_marginTop="40dp"/>

    </LinearLayout>



</LinearLayout>